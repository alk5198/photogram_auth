<div class="page-header">
  <h3>User #<%= @user.id %></h3>
</div>

<div class="row">
  <div class="col-md-12 mb-2">
    <dl class="dl-horizontal">

      <dt>Username</dt>
      <dd><%= @user.username %></dd>


      <dt>Email</dt>
      <dd><%= @user.email %></dd>





    </dl>


  </div>
</div>

<div class="page-header">
  <h3>Photos</h3>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>

        <th>Caption</th>

        <th>Image</th>

      


      </tr>

      <% current_user.photos.each do |photo| %>
      <tr>

        <td><%= photo.caption %></td>

        <td> <img src="<%= photo.image %>" width="400"></td>




      </tr>
      <% end %>
    </table>
  </div>
</div>
